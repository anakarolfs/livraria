@model UsuarioModel
@{
    ViewData["Title"] = "Confirmação apagar Usuario";
}

<div class="text-center">

    <h3>Confirmar exclusão? (@Model.nome)</h3>

</div>

    <a class="btn btn-primary d-grid gap-2" role="button" asp-controller="Usuario" asp-action="Index" >Cancelar exclusão</a>
    <a class="btn btn-danger d-grid gap-2" role="button" asp-controller="Usuario" asp-action="Apagar" asp-route-id="@Model.id">Confirmar exclusão</a>