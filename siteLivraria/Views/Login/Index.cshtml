@model LoginModel

@{
    Layout = "_LayoutLogin";
    ViewData["Title"] = "Login";
}

<head>
    <meta charset="utf-8" />
    <link rel="stylesheet" type="text/css" href="~/css/perfil.css" />
</head>

    @if(TempData["MensagemErro"] != null)
        {
            <div class="alert alert-danger" role="alert">
            <button type="button" class="btn btn-danger btn-sm close-alert" aria-label="Close">X</button>
        @TempData["MensagemErro"]
            </div>
        }

    <div class="flex-container">
     
        <div class="img">
            <!-- <img class="img" > -->
        </div>

        <div class="login">

            <form asp-controller="Login" asp-action="Entrar" method="post">

                <div class="form-group">
                    <label for="login">Login</label>
                    <input type="text" asp-for="login" class="form-control" id="login" placeholder="Seu email">
                    @Html.ValidationMessageFor(x => x.login)
                </div>

                <div class="form-group">
                    <label for="senha">Senha</label>
                    <input type="password" asp-for="senha" class="form-control" id="senha" placeholder="Senha">
                    @Html.ValidationMessageFor(x => x.senha)
                </div>

                <button type="submit" class="btn btn-primary">Entrar</button>

            </form>

        </div>

    </div>

