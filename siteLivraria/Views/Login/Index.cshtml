@model LoginModel
@{
    Layout = "_LayoutLogin";
    ViewData["Title"] = "Login";
}

    @if(TempData["MensagemErro"] != null)
    {
        <div class="alert alert-danger" role="alert">
            <button type="button" class="btn btn-danger btn-sm close-alert" aria-label="Close">X</button>
            @TempData["MensagemErro"]
        </div>
    }

    <form asp-controller="Login" asp-action="Entrar" method="post">

      <div class="form-group">
        <label for="login">Login</label>
        <input type="text" asp-for="login" class="form-control" id="login" placeholder="Seu email">
        @Html.ValidationMessageFor(x => x.login)
      </div>

      <div class="form-group">
        <label for="senha">Senha</label>
        <input type="password" asp-for="senha" class="form-control" id="senha" placeholder="Senha">
        @Html.ValidationMessageFor(x => x.senha)
      </div>

      <button type="submit" class="btn btn-primary">Entrar</button>

    </form>